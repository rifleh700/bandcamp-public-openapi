{
  "type": "object",
  "required": [
    "filters",
    "page"
  ],
  "properties": {
    "filters": {
      "type": "object",
      "required": [
        "format",
        "location",
        "sort",
        "tags"
      ],
      "properties": {
        "format": {
          "type": "string",
          "enum": [
            "all",
            "vinyl",
            "cd",
            "cassette"
          ]
        },
        "location": {
          "type": "integer",
          "format": "int64",
          "example": "4155751",
          "description": "ID of the location"
        },
        "sort": {
          "type": "string",
          "enum": [
            "random",
            "pop",
            "date"
          ]
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string",
            "example": "vaporwave"
          }
        }
      }
    },
    "page": {
      "type": "integer",
      "format": "int64",
      "example": "1"
    }
  }
}